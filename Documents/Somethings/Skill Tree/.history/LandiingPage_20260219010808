<script>
gsap.registerPlugin(ScrollTrigger);

/* â”€â”€ CURSOR â”€â”€ */
const c1=document.getElementById('cur1'), c2=document.getElementById('cur2');
let mx=0,my=0,rx=0,ry=0;
document.addEventListener('mousemove',e=>{
  mx=e.clientX; my=e.clientY;
  gsap.set(c1,{left:mx,top:my});
});
(function loop(){
  rx+=(mx-rx)*.1; ry+=(my-ry)*.1;
  c2.style.left=rx+'px'; c2.style.top=ry+'px';
  requestAnimationFrame(loop);
})();
document.querySelectorAll('a,button,.f-card,.t-card,.s-pill').forEach(el=>{
  el.addEventListener('mouseenter',()=>document.body.classList.add('hov'));
  el.addEventListener('mouseleave',()=>document.body.classList.remove('hov'));
});

/* â”€â”€ FALLING PETALS â”€â”€ */
const canvas = document.getElementById('petalCanvas');
const ctx = canvas.getContext('2d');
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;
window.addEventListener('resize',()=>{ canvas.width=window.innerWidth; canvas.height=window.innerHeight; });

const petals = Array.from({length:18},()=>({
  x: Math.random()*window.innerWidth,
  y: Math.random()*window.innerHeight - window.innerHeight,
  size: Math.random()*8+5,
  speed: Math.random()*.6+.3,
  drift: (Math.random()-.5)*.4,
  rotation: Math.random()*360,
  rotSpeed: (Math.random()-.5)*1.5,
  opacity: Math.random()*.4+.15,
  hue: Math.random()*20+340, // pinks
}));

function drawPetal(p){
  ctx.save();
  ctx.translate(p.x,p.y);
  ctx.rotate(p.rotation*Math.PI/180);
  ctx.globalAlpha = p.opacity;
  ctx.beginPath();
  ctx.ellipse(0,0,p.size*.6,p.size,0,0,Math.PI*2);
  ctx.fillStyle=`hsl(${p.hue},70%,80%)`;
  ctx.fill();
  ctx.restore();
}

function animatePetals(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  petals.forEach(p=>{
    p.y += p.speed;
    p.x += p.drift + Math.sin(p.y*.02)*.3;
    p.rotation += p.rotSpeed;
    if(p.y > window.innerHeight+20){
      p.y = -20; p.x = Math.random()*window.innerWidth;
    }
    drawPetal(p);
  });
  requestAnimationFrame(animatePetals);
}
animatePetals();

/* â”€â”€ NAV SCROLL â”€â”€ */
ScrollTrigger.create({
  start:'top -60',
  onEnter:()=>document.getElementById('nav').classList.add('scrolled'),
  onLeaveBack:()=>document.getElementById('nav').classList.remove('scrolled'),
});

/* â”€â”€ STORY SCROLL â”€â”€ */
const steps = [
  {s:document.getElementById('ss1'),v:document.getElementById('sv1'),n:'01'},
  {s:document.getElementById('ss2'),v:document.getElementById('sv2'),n:'02'},
  {s:document.getElementById('ss3'),v:document.getElementById('sv3'),n:'03'},
];
const storyLeft = document.getElementById('storyLeft');

function showStep(i){
  steps.forEach((item,j)=>{
    const on = j===i;
    gsap.to(item.s,{opacity:on?1:0,y:on?0:24,duration:.7,ease:'power2.out',pointerEvents:on?'auto':'none'});
    gsap.to(item.v,{opacity:on?1:0,duration:.7,ease:'power2.out'});
    item.s.classList.toggle('active',on);
    item.v.classList.toggle('active',on);
  });
  storyLeft.setAttribute('data-num',steps[i].n);
}

ScrollTrigger.create({
  trigger:'#story', start:'top top', end:'bottom bottom',
  onUpdate:self=>{
    const p=self.progress;
    const i=p<.33?0:p<.66?1:2;
    const cur=steps.findIndex(s=>s.s.classList.contains('active'));
    if(cur!==i) showStep(i);
  }
});

/* â”€â”€ HERO ENTRANCE â”€â”€ */
gsap.from('#nav',{opacity:0,y:-20,duration:.8,ease:'power2.out',delay:.1});

/* â”€â”€ FEATURES â”€â”€ */
gsap.from('#featH2',{y:40,opacity:0,duration:1,ease:'power3.out',scrollTrigger:{trigger:'#features',start:'top 75%'}});
gsap.from('.f-card',{y:40,opacity:0,duration:.8,ease:'power2.out',stagger:.15,scrollTrigger:{trigger:'.feat-grid',start:'top 80%'}});

/* â”€â”€ TESTIMONIALS â”€â”€ */
gsap.from('#testH2',{y:40,opacity:0,duration:1,ease:'power3.out',scrollTrigger:{trigger:'#testimonials',start:'top 75%'}});
gsap.from('.t-card',{y:40,opacity:0,duration:.7,ease:'power2.out',stagger:.15,scrollTrigger:{trigger:'.t-grid',start:'top 80%'}});

/* â”€â”€ CTA TITLE â”€â”€ */
gsap.from('#ctaH2 .cta-line',{y:60,opacity:0,duration:.9,ease:'power4.out',stagger:.12,scrollTrigger:{trigger:'#cta',start:'top 75%'}});

/* â”€â”€ STATS â”€â”€ */
gsap.from('.stat-cell',{y:30,opacity:0,duration:.7,stagger:.08,ease:'power2.out',scrollTrigger:{trigger:'#stats',start:'top 80%'}});
const statDefs=[{el:'st1',t:12},{el:'st2',t:84},{el:'st3',t:240},{el:'st4',t:94}];
statDefs.forEach(({el,t})=>{
  const node=document.getElementById(el);
  ScrollTrigger.create({
    trigger:'#stats',start:'top 80%',once:true,
    onEnter:()=>{
      gsap.to({v:0},{v:t,duration:1.8,ease:'power2.out',
        onUpdate:function(){node.textContent=Math.floor(this.targets()[0].v);}
      });
    }
  });
});

/* â”€â”€ CARD HOVER 3D â”€â”€ */
document.querySelectorAll('.f-card,.t-card').forEach(card=>{
  card.addEventListener('mousemove',e=>{
    const r=card.getBoundingClientRect();
    const x=(e.clientX-r.left)/r.width-.5;
    const y=(e.clientY-r.top)/r.height-.5;
    gsap.to(card,{rotateY:x*5,rotateX:-y*4,duration:.5,ease:'power2.out',transformPerspective:900});
  });
  card.addEventListener('mouseleave',()=>{
    gsap.to(card,{rotateY:0,rotateX:0,duration:.8,ease:'elastic.out(1,.4)'});
  });
});
</script>
</body>
</html>